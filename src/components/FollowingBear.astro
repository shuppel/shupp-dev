<div class="bear-container">
  <svg viewBox="0 0 300 300" class="bear-svg">
    <!-- Shadow under head -->
    <ellipse cx="150" cy="235" rx="60" ry="18" fill="#222" opacity="0.18" />
    <!-- Bear head with gradient -->
    <defs>
      <radialGradient id="bearHeadGradient" cx="50%" cy="40%" r="80%">
        <stop offset="0%" stop-color="#666" />
        <stop offset="100%" stop-color="#444" />
      </radialGradient>
      <radialGradient id="earGradient" cx="50%" cy="40%" r="80%">
        <stop offset="0%" stop-color="#888" />
        <stop offset="100%" stop-color="#444" />
      </radialGradient>
      <radialGradient id="innerEarGradient" cx="50%" cy="60%" r="80%">
        <stop offset="0%" stop-color="#e0e0e0" />
        <stop offset="100%" stop-color="#aaa" />
      </radialGradient>
      <radialGradient id="noseGradient" cx="50%" cy="60%" r="80%">
        <stop offset="0%" stop-color="#bbb" />
        <stop offset="100%" stop-color="#444" />
      </radialGradient>
    </defs>
    <!-- Bear head -->
    <circle cx="150" cy="150" r="80" fill="url(#bearHeadGradient)" class="bear-head"/>
    <!-- Head highlight -->
    <ellipse cx="135" cy="120" rx="30" ry="12" fill="#fff" opacity="0.13" />
    <!-- Ears -->
    <circle cx="120" cy="100" r="25" fill="url(#earGradient)" class="ear"/>
    <circle cx="180" cy="100" r="25" fill="url(#earGradient)" class="ear"/>
    <ellipse cx="120" cy="95" rx="10" ry="5" fill="#fff" opacity="0.10" />
    <ellipse cx="180" cy="95" rx="10" ry="5" fill="#fff" opacity="0.10" />
    <circle cx="120" cy="100" r="15" fill="url(#innerEarGradient)" class="ear-inner"/>
    <circle cx="180" cy="100" r="15" fill="url(#innerEarGradient)" class="ear-inner"/>
    <!-- Eye whites -->
    <ellipse cx="125" cy="135" rx="18" ry="22" fill="#fff" class="eye-white"/>
    <ellipse cx="175" cy="135" rx="18" ry="22" fill="#fff" class="eye-white"/>
    <!-- Eye pupils -->
    <circle cx="125" cy="135" r="8" fill="#222" class="pupil left-pupil"/>
    <circle cx="175" cy="135" r="8" fill="#222" class="pupil right-pupil"/>
    <!-- Eye shine -->
    <ellipse cx="128" cy="132" rx="2.2" ry="1.2" fill="#fff" opacity="0.7" />
    <ellipse cx="178" cy="132" rx="2.2" ry="1.2" fill="#fff" opacity="0.7" />
    <!-- Nose (lighter, with gradient) -->
    <ellipse cx="150" cy="160" rx="10" ry="7" fill="url(#noseGradient)" style="stroke:#222;stroke-width:1.5;"/>
    <!-- Nose shine -->
    <ellipse cx="153" cy="158" rx="2.5" ry="1.2" fill="#fff" opacity="0.5" />
    <!-- Mouth (softer color) -->
    <path d="M 140 175 Q 150 185 160 175" stroke="#888" stroke-width="2.2" fill="none" stroke-linecap="round"/>
  </svg>
</div>

<style>
  .bear-container {
    width: 300px;
    height: 300px;
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 100;
    pointer-events: none;
    animation: float 8s ease-in-out infinite;
  }

  @keyframes float {
    0% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-15px) rotate(2deg);
    }
    100% {
      transform: translateY(0px) rotate(0deg);
    }
  }

  .bear-svg {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 10px 20px rgba(20, 8, 14, 0.15));
    transition: filter 0.3s ease;
  }

  .bear-svg:hover {
    filter: drop-shadow(0 15px 30px rgba(20, 8, 14, 0.25));
  }

  .bear-head {
    fill: var(--color-dark);
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  .ear {
    fill: var(--color-dark);
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    transform-origin: center;
    animation: ear-wiggle 8s ease-in-out infinite;
  }

  @keyframes ear-wiggle {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(-5deg); }
    75% { transform: rotate(5deg); }
  }

  .ear-inner {
    fill: var(--color-secondary);
  }

  .eye-white {
    fill: #ffffff;
    transition: all 0.2s ease;
  }

  .pupil {
    transition: all 0.1s cubic-bezier(0.25, 0.8, 0.25, 1);
    transform-origin: center;
    fill: var(--color-dark);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.querySelector('.bear-container');
    const leftPupil = document.querySelector('.left-pupil');
    const rightPupil = document.querySelector('.right-pupil');
    
    if (!container || !leftPupil || !rightPupil) return;
    
    document.addEventListener('mousemove', (e) => {
      // Get mouse position relative to viewport
      const mouseX = e.clientX;
      const mouseY = e.clientY;
      
      // Calculate center of bear head in viewport coordinates
      const bearRect = container.getBoundingClientRect();
      const bearCenterX = bearRect.left + 150;
      const bearCenterY = bearRect.top + 150;
      
      // Move pupils
      const pupilMovement = 5; // Max movement radius
      const leftEyeX = 125, leftEyeY = 135;
      const rightEyeX = 175, rightEyeY = 135;
      
      // Left pupil
      const leftDx = mouseX - (bearRect.left + leftEyeX);
      const leftDy = mouseY - (bearRect.top + leftEyeY);
      const leftDist = Math.min(pupilMovement, Math.sqrt(leftDx*leftDx + leftDy*leftDy) / 10);
      const leftAngle = Math.atan2(leftDy, leftDx);
      
      leftPupil.setAttribute('cx', String(leftEyeX + Math.cos(leftAngle) * leftDist));
      leftPupil.setAttribute('cy', String(leftEyeY + Math.sin(leftAngle) * leftDist));
      
      // Right pupil
      const rightDx = mouseX - (bearRect.left + rightEyeX);
      const rightDy = mouseY - (bearRect.top + rightEyeY);
      const rightDist = Math.min(pupilMovement, Math.sqrt(rightDx*rightDx + rightDy*rightDy) / 10);
      const rightAngle = Math.atan2(rightDy, rightDx);
      
      rightPupil.setAttribute('cx', String(rightEyeX + Math.cos(rightAngle) * rightDist));
      rightPupil.setAttribute('cy', String(rightEyeY + Math.sin(rightAngle) * rightDist));
    });
  });
</script>