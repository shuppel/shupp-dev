<style is:global>
  /* Common Card Styles */
  .card-base {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--card-shadow);
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    position: relative;
    will-change: transform, box-shadow;
  }

  html.dark .card-base {
    background: #23232b;
    color: #f3f4f6;
  }

  .card-base:hover {
    transform: translateY(-7px) scale(1.01);
    box-shadow: 0 15px 30px rgba(20, 8, 14, 0.1), 0 8px 10px rgba(20, 8, 14, 0.05);
  }

  /* Card with gradient border */
  .card-gradient-border {
    position: relative;
    overflow: hidden;
  }

  .card-gradient-border::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 0;
    background: linear-gradient(to bottom, var(--color-tertiary), var(--color-accent));
    transition: height 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  .card-gradient-border:hover::before {
    height: 100%;
  }

  /* Card with glow effect */
  .card-glow {
    position: relative;
    overflow: hidden;
    z-index: 1;
  }

  .card-glow::before {
    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: linear-gradient(135deg, rgba(121, 148, 150, 0.05) 0%, rgba(172, 193, 150, 0.1) 50%, rgba(233, 235, 158, 0.05) 100%);
    z-index: -1;
    transform: scale(0.9);
    opacity: 0;
    border-radius: 16px;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  .card-glow:hover::before {
    opacity: 1;
    transform: scale(1);
  }

  /* Card Image Styles */
  .card-image {
    height: 200px;
    overflow: hidden;
    position: relative;
  }

  .card-image::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, transparent 70%, rgba(20, 8, 14, 0.05) 100%);
    z-index: 1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .card-base:hover .card-image::after {
    opacity: 1;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-secondary), var(--color-tertiary));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 1.5rem;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .placeholder-image::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, transparent 30%, rgba(172, 193, 150, 0.4) 70%);
    animation: ripple-pulse 10s linear infinite;
    opacity: 0.3;
  }

  @keyframes ripple-pulse {
    0% {
      transform: translate(0, 0) scale(0.8);
    }
    50% {
      transform: translate(10%, 10%) scale(1);
    }
    100% {
      transform: translate(0, 0) scale(0.8);
    }
  }

  .card-base:hover .placeholder-image {
    transform: scale(1.05);
  }

  /* Card Content Styles */
  .card-content {
    padding: 1.8rem;
    position: relative;
    z-index: 2;
  }

  /* Card Title with Animation */
  .card-title {
    margin-bottom: 1rem;
    color: var(--color-dark);
    transition: color 0.3s ease;
    position: relative;
    display: inline-block;
  }

  html.dark .card-title {
    color: #f3f4f6;
  }

  .card-title::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -4px;
    width: 0;
    height: 2px;
    background: linear-gradient(to right, var(--color-tertiary), var(--color-accent));
    transition: width 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  .card-base:hover .card-title::after {
    width: 100%;
  }

  /* Card Description/Excerpt */
  .card-description {
    color: var(--text-light);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  html.dark .card-description {
    color: #c5c5d2;
  }

  /* Card Meta Info */
  .card-meta {
    display: flex;
    justify-content: space-between;
    color: var(--text-light);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  html.dark .card-meta {
    color: var(--color-accent);
  }

  /* Card Tags/Categories */
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .card-tag {
    background: var(--background-alt);
    color: var(--text-light);
    font-size: 0.8rem;
    padding: 0.25rem 0.7rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  html.dark .card-tag {
    background: rgba(233, 235, 158, 0.1);
    color: var(--color-accent);
  }

  /* Read More Link */
  .read-more {
    font-weight: 600;
    color: var(--color-tertiary);
    transition: all 0.3s ease;
    position: relative;
    padding-right: 20px;
  }

  html.dark .read-more {
    color: var(--color-accent);
  }

  .read-more::after {
    content: 'â†’';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    transition: transform 0.3s ease;
  }

  .card-base:hover .read-more {
    color: var(--color-accent);
    padding-right: 25px;
  }

  .card-base:hover .read-more::after {
    transform: translate(5px, -50%);
  }

  /* Card Button Styles */
  .btn-card {
    padding: 0.5rem 1.2rem;
    font-size: 0.9rem;
    margin-top: 1rem;
    border-radius: 30px;
    background-color: transparent;
    color: var(--color-tertiary);
    border: 1px solid var(--color-tertiary);
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    position: relative;
    overflow: hidden;
    z-index: 1;
  }

  html.dark .btn-card {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  .btn-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-tertiary);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    z-index: -1;
  }

  .btn-card:hover {
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(20, 8, 14, 0.1);
  }

  html.dark .btn-card:hover {
    color: #23232b;
    background: var(--color-accent);
  }

  .btn-card:hover::before {
    transform: scaleX(1);
  }
</style>