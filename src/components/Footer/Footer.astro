---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <a href="/">Shupp.Dev</a>
      </div>
      <div class="footer-links">
        <div class="footer-section">
          <h3>Navigation</h3>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/portfolio">Portfolio</a></li>
            <li><a href="/blog">Blog</a></li>
            <li><a href="/roadmap">Roadmap</a></li>
          </ul>
        </div>
        <div class="footer-section">
          <h3>Connect</h3>
          <ul>
            <li><a href="https://github.com/shuppel" target="_blank" rel="noopener noreferrer">GitHub</a></li>
            <li><a href="https://www.linkedin.com/in/shupp-erikk" target="_blank" rel="noopener noreferrer">LinkedIn</a></li>
            <li><a href="https://bsky.app/profile/shupp.dev" target="_blank" rel="noopener noreferrer">Bluesky</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; {currentYear} Shupp.Dev. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(to bottom, var(--color-dark) 0%, #0a0407 100%);
    color: #fff;
    padding: 4rem 0 1rem;
    margin-top: 6rem;
    position: relative;
    overflow: hidden;
  }

  .footer::before, .footer::after {
    content: '';
    position: absolute;
    width: 200px;
    height: 200px;
    border-radius: 50%;
  }

  .footer::before {
    background: radial-gradient(circle, rgba(172, 193, 150, 0.1) 0%, rgba(172, 193, 150, 0) 70%);
    top: -100px;
    right: -50px;
    opacity: 0.6;
  }

  .footer::after {
    background: radial-gradient(circle, rgba(121, 148, 150, 0.05) 0%, rgba(121, 148, 150, 0) 70%);
    bottom: -100px;
    left: -50px;
    opacity: 0.6;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }

  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 3rem;
  }

  .footer-logo {
    margin-bottom: 1.8rem;
  }

  .footer-logo a {
    font-size: 1.8rem;
    font-weight: 700;
    font-family: var(--font-main-header);
    color: #fff;
    text-decoration: none;
    position: relative;
    transition: all 0.3s ease;
  }

  .footer-logo a:hover {
    color: var(--color-light);
    transform: translateY(-2px);
    text-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: 4rem;
  }

  .footer-section h3 {
    font-size: 1.1rem;
    margin-bottom: 1.2rem;
    color: var(--color-light);
    font-family: var(--font-secondary-header);
    position: relative;
    display: inline-block;
  }

  .footer-section h3::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 0;
    width: 30px;
    height: 2px;
    background: linear-gradient(to right, var(--color-tertiary), var(--color-accent));
    transition: width 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  .footer-section:hover h3::after {
    width: 60px;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: 0.8rem;
  }

  .footer-section a {
    color: var(--color-tertiary);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    font-family: var(--font-body);
    display: inline-block;
  }

  .footer-section a::before {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-accent);
    transition: width 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  .footer-section a:hover {
    color: var(--color-accent);
    transform: translateX(3px);
  }

  .footer-section a:hover::before {
    width: 100%;
  }

  .footer-bottom {
    border-top: 1px solid rgba(121, 148, 150, 0.2);
    padding-top: 1.5rem;
    text-align: center;
    font-size: 0.9rem;
    color: var(--color-tertiary);
    font-family: var(--font-secondary-header);
    position: relative;
    z-index: 2;
  }

  @media (max-width: 768px) {
    .footer-logo {
      width: 100%;
      text-align: center;
    }

    .footer-links {
      width: 100%;
      justify-content: space-around;
    }
  }
</style>