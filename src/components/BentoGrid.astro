---

import { type CollectionEntry } from 'astro:content';

interface Props {
  posts: CollectionEntry<'blog'>[];
  layout?: 'default' | 'featured' | 'compact';
  maxPosts?: number;
  showExcerpt?: boolean;
}

const { posts, layout = 'default', maxPosts, showExcerpt = true } = Astro.props;

// Slice the posts array if maxPosts is defined
const displayedPosts = maxPosts ? posts.slice(0, maxPosts) : posts;

// Calculate image size classes based on index and layout
function getPostSize(index: number, layout: string) {
  if (layout === 'featured') {
    // Featured layout has a large first post, medium second post, and small others
    if (index === 0) return 'post-large';
    if (index === 1) return 'post-medium';
    return 'post-small';
  }

  if (layout === 'compact') {
    // Compact layout has uniform small posts
    return 'post-small';
  }

  // Default layout alternates between medium and small posts
  // with a large post every 5 items
  if (index % 5 === 0) return 'post-large';
  if (index % 2 === 0) return 'post-medium';
  return 'post-small';
}

// Format the date
function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<div class={`bento-grid bento-${layout}`}>
  {displayedPosts.map((post, index) => (
    <a href={`/blog/${post.slug}`} class={`bento-item ${getPostSize(index, layout)}`}>
      <div class="bento-image">
        <div class="placeholder-image">
          {post.data.featuredImage && (
            <div class="placeholder-text">{post.data.featuredImage}</div>
          )}
        </div>
      </div>
      <div class="bento-content">
        <div class="bento-meta">
          <span class="bento-date">{formatDate(post.data.pubDate)}</span>
          {post.data.readTime && (
            <span class="bento-readtime">{post.data.readTime}</span>
          )}
        </div>
        <h3 class="bento-title">{post.data.title}</h3>
        {showExcerpt && <p class="bento-excerpt">{post.data.description}</p>}
        <div class="bento-categories">
          {post.data.categories.map(category => (
            <span class="bento-category">{category}</span>
          ))}
        </div>
      </div>
    </a>
  ))}
</div>

<style>
  .bento-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(12, 1fr);
    margin-bottom: 4rem;
  }
  
  /* Default Layout */
  .bento-default .bento-item.post-large {
    grid-column: span 6;
    grid-row: span 2;
  }
  
  .bento-default .bento-item.post-medium {
    grid-column: span 6;
    grid-row: span 1;
  }
  
  .bento-default .bento-item.post-small {
    grid-column: span 4;
    grid-row: span 1;
  }
  
  /* Featured Layout */
  .bento-featured .bento-item.post-large {
    grid-column: span 8;
    grid-row: span 2;
  }
  
  .bento-featured .bento-item.post-medium {
    grid-column: span 4;
    grid-row: span 2;
  }
  
  .bento-featured .bento-item.post-small {
    grid-column: span 4;
    grid-row: span 1;
  }
  
  /* Compact Layout */
  .bento-compact {
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }
  
  .bento-compact .bento-item {
    grid-column: span 1;
    grid-row: span 1;
  }
  
  /* Bento Item Styling */
  .bento-item {
    display: flex;
    flex-direction: column;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--card-shadow);
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    text-decoration: none;
    color: inherit;
    position: relative;
  }
  
  .bento-item:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1), 0 6px 12px rgba(0, 0, 0, 0.05);
  }
  
  .bento-image {
    height: 0;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    position: relative;
    overflow: hidden;
  }
  
  .post-large .bento-image {
    padding-bottom: 50%; /* Slightly different aspect ratio for large */
  }
  
  .placeholder-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, var(--primary-color), var(--primary-dark));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 1.25rem;
  }
  
  .bento-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  
  .bento-meta {
    display: flex;
    justify-content: space-between;
    color: var(--text-light);
    font-size: 0.85rem;
    margin-bottom: 0.75rem;
  }
  
  .bento-title {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
    line-height: 1.3;
  }
  
  .post-large .bento-title {
    font-size: 1.75rem;
  }
  
  .bento-excerpt {
    color: var(--text-light);
    font-size: 0.95rem;
    margin-bottom: 1rem;
    line-height: 1.6;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .post-small .bento-excerpt {
    -webkit-line-clamp: 2;
  }
  
  .bento-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
  }
  
  .bento-category {
    background: var(--background-alt);
    color: var(--text-light);
    font-size: 0.75rem;
    padding: 0.25rem 0.7rem;
    border-radius: 4px;
    white-space: nowrap;
  }
  
  /* Responsive adjustments */
  @media (max-width: 1200px) {
    .bento-default .bento-item.post-large,
    .bento-featured .bento-item.post-large {
      grid-column: span 8;
    }
    
    .bento-default .bento-item.post-small {
      grid-column: span 6;
    }
  }
  
  @media (max-width: 992px) {
    .bento-default .bento-item.post-large,
    .bento-featured .bento-item.post-large {
      grid-column: span 12;
      grid-row: span 1;
    }
    
    .bento-default .bento-item.post-medium,
    .bento-featured .bento-item.post-medium,
    .bento-default .bento-item.post-small,
    .bento-featured .bento-item.post-small {
      grid-column: span 6;
    }
  }
  
  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: 1fr;
    }
    
    .bento-default .bento-item,
    .bento-featured .bento-item,
    .bento-compact .bento-item {
      grid-column: span 1 !important;
    }
    
    .bento-title {
      font-size: 1.25rem !important;
    }
  }
</style>