---
import LiquidHeroComponent from './LiquidHero/LiquidHero.tsx';

export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class={`liquid-hero-container ${className || ''}`} data-liquid-hero>
  <LiquidHeroComponent client:load />
</div>

<script>
  // Theme change events are now handled globally via window.themechange event
  // The React component listens directly to window.themechange
</script>

<style>
  .liquid-hero-container {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
  }
</style>