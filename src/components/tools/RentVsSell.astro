---
// This component will be dynamically loaded on the tool page
---

<div id="rent-vs-sell-calculator" class="tool-container">
  <div class="calculator-wrapper">
    <!-- React component will mount here -->
    <div class="loading-state">
      <div class="spinner"></div>
      <p>Loading calculator...</p>
    </div>
  </div>
</div>

<script>
  // Dynamic import and mount of React component
  document.addEventListener('DOMContentLoaded', async () => {
    try {
      const { mount } = await import('./RentVsSell/mount');
      mount();
    } catch (error) {
      console.error('Failed to load calculator:', error);
      document.querySelector('.calculator-wrapper')!.innerHTML = 
        '<p class="error-message">Failed to load calculator. Please refresh the page.</p>';
    }
  });
</script>

<style>
  .tool-container {
    width: 100%;
    min-height: 600px;
  }

  .calculator-wrapper {
    width: 100%;
    background: var(--card-bg);
    border-radius: 12px;
    padding: 2rem;
    box-shadow: var(--card-shadow);
  }

  .loading-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    color: var(--text-light);
  }

  .spinner {
    width: 40px;
    height: 40px;
    border: 3px solid rgba(59, 130, 246, 0.2);
    border-top-color: #3b82f6;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 1rem;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .error-message {
    color: #ef4444;
    text-align: center;
    padding: 2rem;
  }

  @media (max-width: 768px) {
    .calculator-wrapper {
      padding: 1rem;
    }
  }
</style>