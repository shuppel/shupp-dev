---
import Layout from '../../../layouts/Layout.astro';
import RentVsBuyTool from '../../../components/tools/RentVsBuy.astro';
---

<Layout title="Rent vs Buy Calculator - Interactive Tool" description="Calculate whether renting or buying a home makes more financial sense with this interactive calculator">
  <div class="tool-app">
    <!-- About Section -->
    <section class="about-section">
      <div class="about-container">
        <div class="about-content">
          <h1>Rent vs Buy Calculator</h1>
          <p class="about-description">
            Make informed decisions about renting versus buying with our comprehensive financial analysis tool.
            Compare monthly costs, long-term projections, and tax implications to determine the best option for your situation.
          </p>

          <div class="features-grid">
            <div class="feature-item">
              <div class="feature-icon">ðŸ“Š</div>
              <h3>Comprehensive Analysis</h3>
              <p>Compare all costs including mortgage, taxes, maintenance, and opportunity costs</p>
            </div>
            <div class="feature-item">
              <div class="feature-icon">ðŸ“ˆ</div>
              <h3>Long-term Projections</h3>
              <p>See how your decision plays out over 5, 10, or 30 years</p>
            </div>
            <div class="feature-item">
              <div class="feature-icon">ðŸŽ¯</div>
              <h3>Personalized Results</h3>
              <p>Tailored recommendations based on your financial situation and market conditions</p>
            </div>
          </div>

          <div class="cta-section">
            <button class="start-calculator-btn" onclick="document.getElementById('calculator-section').scrollIntoView({behavior: 'smooth'})">
              Start Calculator
              <span class="arrow">â†’</span>
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Calculator App Section -->
    <section id="calculator-section" class="calculator-section">
      <div class="calculator-container">
        <RentVsBuyTool />
      </div>
    </section>
  </div>
</Layout>

<style>
  .tool-app {
    min-height: 100vh;
    background: var(--background-color);
    color: var(--text-color);
  }

  /* About Section */
  .about-section {
    background: linear-gradient(135deg, #14080E 0%, #49475B 50%, #799496 100%);
    padding: 4rem 0;
    position: relative;
    overflow: hidden;
  }

  .about-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 20%, rgba(172, 193, 150, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 70% 80%, rgba(233, 235, 158, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .about-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .about-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

   .about-content h1 {
     font-size: clamp(2.5rem, 5vw, 4rem);
     margin-bottom: 1.5rem;
     color: var(--text-primary);
     font-weight: 700;
     background: linear-gradient(135deg, var(--accent-light), var(--accent-sage));
     -webkit-background-clip: text;
     -webkit-text-fill-color: transparent;
     background-clip: text;
   }

   .about-description {
     font-size: 1.25rem;
     color: var(--text-secondary);
     margin-bottom: 3rem;
     line-height: 1.6;
     max-width: 700px;
     margin-left: auto;
     margin-right: auto;
   }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .feature-item {
    background: rgba(73, 71, 91, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(172, 193, 150, 0.2);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .feature-item:hover {
    transform: translateY(-4px);
    border-color: rgba(172, 193, 150, 0.4);
    box-shadow: 0 8px 25px rgba(14, 8, 14, 0.3);
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
  }

   .feature-item h3 {
     font-size: 1.25rem;
     color: var(--text-primary);
     margin-bottom: 0.75rem;
     font-weight: 600;
   }

   .feature-item p {
     color: var(--text-secondary);
     line-height: 1.5;
     font-size: 0.95rem;
   }

  .cta-section {
    margin-top: 2rem;
  }

   .start-calculator-btn {
     background: linear-gradient(135deg, var(--accent-sage), var(--accent-light));
     color: var(--primary-dark);
     border: none;
     border-radius: 12px;
     padding: 1rem 2rem;
     font-size: 1.1rem;
     font-weight: 600;
     cursor: pointer;
     transition: all 0.3s ease;
     display: inline-flex;
     align-items: center;
     gap: 0.5rem;
     box-shadow: 0 4px 15px rgba(143, 184, 138, 0.3);
   }

  .start-calculator-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(172, 193, 150, 0.4);
  }

  .arrow {
    transition: transform 0.3s ease;
  }

  .start-calculator-btn:hover .arrow {
    transform: translateX(4px);
  }

  /* Calculator Section */
  .calculator-section {
    background: var(--background-color);
    padding: 2rem 0;
  }

  .calculator-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .about-section {
      padding: 2rem 0;
    }

    .about-container {
      padding: 0 1rem;
    }

    .about-content h1 {
      font-size: 2.5rem;
    }

    .about-description {
      font-size: 1.1rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .feature-item {
      padding: 1.5rem;
    }

    .calculator-container {
      padding: 0 1rem;
    }
  }

  @media (max-width: 480px) {
    .about-content h1 {
      font-size: 2rem;
    }

    .feature-item {
      padding: 1rem;
    }
  }
</style>