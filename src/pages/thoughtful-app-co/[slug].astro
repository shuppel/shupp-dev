</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Rating descriptions
    const ratingDescriptions = {
      feasibility: {
        1: "Very challenging to implement - requires breakthrough technology or massive resources",
        2: "Difficult to build - significant technical or resource challenges",
        3: "Moderately feasible - achievable with effort and the right team",
        4: "Highly feasible - straightforward to implement with existing technology",
        5: "Extremely feasible - could be built quickly with minimal resources"
      },
      excitement: {
        1: "Low interest - solves a minor problem for few people",
        2: "Some interest - useful but not particularly compelling",
        3: "Moderate excitement - solid idea that would attract users",
        4: "High excitement - people would be eager to use this",
        5: "Extremely exciting - potential game-changer that people would love"
      },
      seriousness: {
        1: "Ridiculous fun - purely playful or experimental idea",
        2: "Mostly fun - entertainment-focused with minor practical value",
        3: "Balanced - mix of practical utility and enjoyable experience",
        4: "Seriously good - would genuinely benefit many people's lives",
        5: "Profoundly impactful - could significantly improve humanity"
      }
    };

    // Populate tooltips
    const ratingItems = document.querySelectorAll('.rating-item');
    ratingItems.forEach(item => {
      const rating = parseInt(item.getAttribute('data-rating') || '0');
      const metric = item.getAttribute('data-metric') as keyof typeof ratingDescriptions;
      const tooltip = item.querySelector('.rating-tooltip');
      
      if (tooltip && rating && metric && ratingDescriptions[metric]) {
        const description = ratingDescriptions[metric][rating as keyof typeof ratingDescriptions.feasibility];
        tooltip.innerHTML = `<strong>${rating}/5 ${metric.charAt(0).toUpperCase() + metric.slice(1)}</strong>${description}`;
      }
    });

    // Handle notify form
    const notifyForm = document.getElementById('notify-form');
    notifyForm?.addEventListener('submit', (e) => {
      e.preventDefault();
      const email = (e.target as HTMLFormElement).querySelector('input')?.value;
      if (email) {
        // In production, you'd send this to your backend
        alert(`Thanks! We'll notify you at ${email} if this app gets built.`);
        (e.target as HTMLFormElement).reset();
      }
    });
    
    // Handle pay buttons
    const payButtons = document.querySelectorAll('.pay-btn');
    payButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        payButtons.forEach(b => b.classList.remove('selected'));
        btn.classList.add('selected');
        const amount = btn.dataset.amount;
        // In production, you'd track this preference
        console.log(`User would pay: ${amount}`);
      });
    });
    
    // Share functionality
    const shareBtn = document.getElementById('share-btn');
    shareBtn?.addEventListener('click', async () => {
      const shareData = {
        title: document.title,
        text: `Check out this app idea: ${document.title}`,
        url: window.location.href
      };
      
      try {
        if (navigator.share) {
          await navigator.share(shareData);
        } else {
          // Fallback to copying URL
          await navigator.clipboard.writeText(window.location.href);
          alert('Link copied to clipboard!');
        }
      } catch (err) {
        console.error('Error sharing:', err);
      }
    });
  });
</script>

