---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import CardStyles from '../components/CardStyles.astro';

// Get all projects from the collection
const allProjects = await getCollection('projects');

// Sort projects by date (newest first)
const projects = allProjects.sort((a, b) => {
  return new Date(b.data.projectDate).getTime() - new Date(a.data.projectDate).getTime();
});

// Create technology list (flattened)
const allTechnologies = projects.flatMap(project => project.data.technologies);

// Get unique technology categories for filtering
const technologies = [...new Set(allTechnologies)];
---

<Layout title="Portfolio" description="Explore my portfolio of software development and product management projects">
  <div class="portfolio-page">
    <section class="portfolio-hero">
      <h1>My Portfolio</h1>
      <p class="lead">A collection of my recent projects and work</p>
    </section>

    <section class="portfolio-filters">
      <div class="filter-container">
        <button class="filter-btn active" data-category="all">All Projects</button>
        {technologies.map(tech => (
          <button class="filter-btn" data-category={tech}>{tech}</button>
        ))}
      </div>
    </section>

    <section class="portfolio-grid">
      {projects.map(project => (
        <div class="portfolio-item two-tone-card" data-technologies={project.data.technologies.join(',')}>
          <div class="portfolio-card-image">
            {project.data.projectImage && project.data.projectImage.startsWith('http') ? (
              <div class="portfolio-image-preview">
                <img 
                  src={`https://image.thum.io/get/width/800/crop/600/${project.data.projectImage}`}
                  alt={`${project.data.title} preview`}
                  loading="lazy"
                  class="portfolio-preview-img"
                  onerror="this.onerror=null; this.src='data:image/svg+xml;base64,'"
                />
              </div>
            ) : (
              <div class="portfolio-image-placeholder">
                <div class="placeholder-icon">ðŸ’¼</div>
              </div>
            )}
            <div class="portfolio-overlay">
              <a href={`/portfolio/${project.slug}`} class="btn-card">View Details</a>
            </div>
          </div>
          <div class="portfolio-card-content">
            <h3 class="portfolio-card-title">{project.data.title}</h3>
            <div class="portfolio-date">
              {new Date(project.data.projectDate).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long'
              })}
            </div>
            <p class="portfolio-card-description">{project.data.description}</p>
            <div class="portfolio-technologies">
              {project.data.technologies.map(tech => (
                <span class="portfolio-technology">{tech}</span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </section>

    <section class="portfolio-cta">
      <div class="cta-card card-base card-glow">
        <h2>Need a custom project?</h2>
        <p>I'm available for freelance work and consulting. Let's discuss how I can help bring your ideas to life.</p>
        <a href="/contact" class="btn btn-primary">Get in Touch</a>
      </div>
    </section>
  </div>
</Layout>

<script>
  // Filter portfolio items by technology
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const portfolioItems = document.querySelectorAll('.portfolio-item');
    
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // Remove active class from all buttons
        filterBtns.forEach(btn => btn.classList.remove('active'));
        
        // Add active class to clicked button
        btn.classList.add('active');
        
        // Get selected category
        const category = btn.getAttribute('data-category');
        
        // Filter portfolio items
        portfolioItems.forEach(item => {
          const technologies = item.getAttribute('data-technologies').split(',');
          
          if (category === 'all' || technologies.includes(category)) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  });
</script>

<style>
  .portfolio-page {
    max-width: 1200px;
    margin: 0 auto;
  }

  .portfolio-hero {
    text-align: center;
    padding: 4rem 0 3rem;
    background: linear-gradient(135deg, rgba(121, 148, 150, 0.2), rgba(172, 193, 150, 0.3), rgba(233, 235, 158, 0.2));
    border-radius: 12px;
    margin-bottom: 2rem;
    position: relative;
    overflow: hidden;
    transition: background 0.3s, color 0.3s;
  }

  html.dark .portfolio-hero {
    background: linear-gradient(135deg, rgba(44, 44, 56, 0.8), rgba(30, 32, 40, 0.9));
  }

  .portfolio-hero::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(ellipse at center, rgba(233, 235, 158, 0), rgba(233, 235, 158, 0.2));
    opacity: 0.7;
    animation: liquid-wave 15s ease-in-out infinite alternate;
    z-index: 0;
    pointer-events: none;
  }

  @keyframes liquid-wave {
    0% {
      transform: translate(-10%, -10%) rotate(0deg);
    }
    100% {
      transform: translate(10%, 10%) rotate(360deg);
    }
  }

  .portfolio-hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(45deg, var(--color-dark), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    position: relative;
    z-index: 2;
    letter-spacing: 0.15em;
    text-transform: lowercase;
  }

  html.dark .portfolio-hero h1 {
    background: linear-gradient(45deg, #f3f4f6, #e9eb9e);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  .portfolio-hero h1::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: linear-gradient(to right, var(--color-tertiary), var(--color-accent));
    border-radius: 3px;
    transition: width 0.3s ease;
  }

  .portfolio-hero:hover h1::after {
    width: 120px;
  }

  .portfolio-hero .lead {
    font-size: 1.25rem;
    max-width: 700px;
    margin: 0 auto;
    color: var(--text-light);
    position: relative;
    z-index: 2;
  }

  html.dark .portfolio-hero .lead {
    color: #f3f4f6;
  }

  .portfolio-filters {
    margin-bottom: 3rem;
  }

  .filter-container {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .filter-btn {
    background: white;
    border: 1px solid var(--color-tertiary);
    padding: 0.5rem 1.25rem;
    border-radius: 30px;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    position: relative;
    overflow: hidden;
    z-index: 1;
  }

  html.dark .filter-btn {
    background: #23232b;
    color: #f3f4f6;
    border-color: var(--color-accent);
  }

  .filter-btn::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 0;
    background: linear-gradient(to top, var(--color-tertiary), transparent);
    opacity: 0.1;
    transition: height 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    z-index: -1;
  }

  html.dark .filter-btn::before {
    background: linear-gradient(to top, var(--color-accent), transparent);
  }

  .filter-btn:hover {
    border-color: var(--color-tertiary);
    color: var(--color-tertiary);
    transform: translateY(-3px);
    box-shadow: 0 4px 8px rgba(121, 148, 150, 0.15);
  }

  html.dark .filter-btn:hover {
    color: var(--color-accent);
    border-color: var(--color-accent);
    box-shadow: 0 4px 8px rgba(172, 193, 150, 0.2);
  }

  .filter-btn:hover::before {
    height: 100%;
  }

  .filter-btn.active {
    background: var(--color-tertiary);
    color: white;
    border-color: var(--color-tertiary);
  }

  html.dark .filter-btn.active {
    background: var(--color-accent);
    color: #23232b;
    border-color: var(--color-accent);
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2.5rem;
    margin-bottom: 4rem;
  }

  /* Two-tone card styles */
  .portfolio-item {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--card-shadow);
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    position: relative;
    will-change: transform, box-shadow;
  }

  html.dark .portfolio-item {
    background: #23232b;
    color: #f3f4f6;
  }

  .portfolio-item:hover {
    transform: translateY(-7px) scale(1.01);
    box-shadow: 0 15px 30px rgba(20, 8, 14, 0.1), 0 8px 10px rgba(20, 8, 14, 0.05);
  }

  .two-tone-card {
    display: flex;
    flex-direction: column;
  }

  .portfolio-card-image {
    height: 200px;
    overflow: hidden;
    position: relative;
  }

  .portfolio-image-preview {
    width: 100%;
    height: 100%;
    position: relative;
    background: #f3f4f6;
  }

  html.dark .portfolio-image-preview {
    background: #1a1a22;
  }

  .portfolio-preview-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top center;
  }

  .portfolio-image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, var(--color-tertiary), var(--color-secondary));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 1.5rem;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .placeholder-icon {
    font-size: 3rem;
    opacity: 0.7;
  }

  html.dark .portfolio-image-placeholder {
    background: linear-gradient(45deg, #1c1c24, #2a2a36);
  }

  .portfolio-card-content {
    padding: 1.8rem;
    position: relative;
    z-index: 2;
    background: white;
    border-top: 1px solid rgba(121, 148, 150, 0.1);
  }

  html.dark .portfolio-card-content {
    background: #23232b;
    border-top: 1px solid rgba(172, 193, 150, 0.1);
  }

  .portfolio-card-title {
    margin-bottom: 1rem;
    color: var(--color-dark);
    transition: color 0.3s ease;
    position: relative;
    display: inline-block;
  }

  html.dark .portfolio-card-title {
    color: #f3f4f6;
  }

  .portfolio-card-description {
    color: var(--text-light);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  html.dark .portfolio-card-description {
    color: #c5c5d2;
  }

  .portfolio-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .portfolio-technology {
    background: var(--background-alt);
    color: var(--text-light);
    font-size: 0.8rem;
    padding: 0.25rem 0.7rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  html.dark .portfolio-technology {
    background: rgba(233, 235, 158, 0.1);
    color: var(--color-accent);
  }
  .portfolio-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(20, 8, 14, 0.75);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    transform: scale(0.9);
    z-index: 10;
  }

  html.dark .portfolio-overlay {
    background: rgba(44, 44, 56, 0.85);
  }

  .portfolio-item:hover .portfolio-overlay {
    opacity: 1;
    transform: scale(1);
  }

  .portfolio-date {
    color: var(--color-tertiary);
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  html.dark .portfolio-date {
    color: var(--color-accent);
  }

  .portfolio-cta {
    margin: 4rem 0;
  }

  .cta-card {
    text-align: center;
    padding: 3rem;
  }

  .cta-card h2 {
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  html.dark .cta-card h2 {
    color: #f3f4f6;
  }

  .cta-card p {
    max-width: 600px;
    margin: 0 auto 2rem;
    color: var(--text-light);
  }

  html.dark .cta-card p {
    color: #c5c5d2;
  }

  @media (max-width: 768px) {
    .portfolio-grid {
      grid-template-columns: 1fr;
    }

    .portfolio-hero h1 {
      font-size: 2.5rem;
    }

    .cta-card {
      padding: 2rem;
    }
  }
</style>