---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all the data
const authorEntries = await getCollection('authors');
const author = authorEntries[0];
const experiences = await getCollection('experience');
const education = await getCollection('education');
const credentials = await getCollection('credentials');

// Sort experiences by order
const sortedExperiences = experiences.sort((a, b) => (a.data.order || 999) - (b.data.order || 999));
---

<Layout title="Resume - Erikk Shupp" description="Professional resume of Erikk Shupp - Product Manager & Software Engineer">
  <div class="resume-container">
    <header class="resume-header">
      <h1>{author.data.name}</h1>
      <p class="title">{author.data.title}</p>
      <div class="contact-info">
        <span>{author.data.location}</span>
        <span>•</span>
        <a href={`mailto:${author.data.email}`}>{author.data.email}</a>
        <span>•</span>
        <a href={author.data.socialLinks?.website} target="_blank" rel="noopener noreferrer">shupp.dev</a>
      </div>
      <div class="social-links">
        <a href={author.data.socialLinks?.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a>
        <span>•</span>
        <a href={author.data.socialLinks?.github} target="_blank" rel="noopener noreferrer">GitHub</a>
        <span>•</span>
        <a href={author.data.socialLinks?.bluesky} target="_blank" rel="noopener noreferrer">Bluesky</a>
      </div>
    </header>

    <section class="resume-section">
      <h2>Professional Summary</h2>
      <p class="summary">
        Product Manager & Full-Stack Engineer building thoughtful digital experiences for humans. Unique blend of 
        creative writing background and deep technical expertise through comprehensive professional development in AI, local-first architectures, 
        and native development. Passionate about leveraging cutting-edge technologies (LLMs, CRDTs, sync engines) to 
        create products that respect user autonomy and privacy. Currently leading federal healthcare modernization 
        while building the future of human-centered apps through Thoughtful App Co.
      </p>
    </section>

    <section class="resume-section">
      <h2>Professional Experience</h2>
      <div class="experience-list">
        <div class="experience-item">
          <div class="experience-header">
            <h3>Product Manager & Technical Founder</h3>
            <span class="date">2024 - Present</span>
          </div>
          <p class="company">Nodetus / Thoughtful App Co. • Washington, DC Metro Area</p>
          <ul class="achievements">
            <li>Building portfolio of 16+ human-centered apps using AI, local-first architectures, and native development</li>
            <li>Architected products using modern stack: React, Flutter, Supabase, Jazz.tools, PostgreSQL</li>
            <li>Managed $32M+ portfolio across federal programs while maintaining 5/5 performance rating</li>
            <li>Led digital transformation and product modernization for DHS, TSA, VA, and NIH</li>
          </ul>
        </div>

        <div class="experience-item">
          <div class="experience-header">
            <h3>Agile IT Lead & Interface Manager</h3>
            <span class="date">2020 - Present</span>
          </div>
          <p class="company">Tria Federal (VA EHRM Contract) • Department of Veterans Affairs</p>
          <ul class="achievements">
            <li>Led agile delivery of 15+ critical healthcare interfaces serving millions of veterans</li>
            <li>Bridged gap between product owners and technical teams, driving actual implementation</li>
            <li>Architected real-time data sync using HL7 FHIR standards and event-driven architecture</li>
            <li>Achieved 99.9% uptime while orchestrating go-lives across multiple medical centers</li>
          </ul>
        </div>

        <div class="experience-item">
          <div class="experience-header">
            <h3>Technical SME & Systems Architect</h3>
            <span class="date">2021 - 2024</span>
          </div>
          <p class="company">Nodetus Integrators (NIH OALM Contract) • National Institutes of Health</p>
          <ul class="achievements">
            <li>Served as technical product advocate, filling gaps when product owners were absent</li>
            <li>Reverse engineered legacy system to create modern microservices architecture</li>
            <li>Designed and executed migration of 80,000+ data fields using PostgreSQL and ETL pipelines</li>
            <li>Reduced document generation time by 60% through algorithmic optimization</li>
          </ul>
        </div>

        <div class="experience-item">
          <div class="experience-header">
            <h3>Project Manager & Process Improvement Lead</h3>
            <span class="date">2018 - 2019</span>
          </div>
          <p class="company">RWD (DHS/TSA Contract) • Transportation Security Administration</p>
          <ul class="achievements">
            <li>Drove digital transformation of procurement processes, acting as de facto product owner</li>
            <li>Implemented automation workflows that were adopted across DHS components</li>
            <li>Reduced contract cycle time by 30% through process optimization and tooling</li>
          </ul>
        </div>

        <div class="experience-item">
          <div class="experience-header">
            <h3>Executive Council & Webmaster</h3>
            <span class="date">2019 - Present</span>
          </div>
          <p class="company">Washington Rugby Football Club</p>
          <ul class="achievements">
            <li>Treasurer & Webmaster (2023-2025): Increased dues collection rate by 40% through Zeffy payment automation</li>
            <li>Implemented SEO strategy using SEMrush, achieving #1 Google rankings for local rugby searches</li>
            <li>Automated event calendar with ChronoScripts, Discord integration, and Google Business listings</li>
            <li>Built predictive financial forecasting models resulting in first budget surplus in 5 years</li>
            <li>Managed Google Ads campaigns with 300% ROI, driving record membership growth</li>
            <li>Vice President (2021-2022) & Fundraising Chair (2021-2023): Raised $100K+ for operations</li>
          </ul>
        </div>
      </div>
    </section>

    <section class="resume-section">
      <h2>Education</h2>
      <div class="education-list">
        {education
          .filter(edu => edu.data.institution === 'George Mason University' || edu.data.institution === 'Longwood University')
          .sort((a, b) => (a.data.order || 999) - (b.data.order || 999))
          .map(async (edu) => {
            const { Content } = await edu.render();
            const startYear = new Date(edu.data.startDate).getFullYear();
            const endYear = edu.data.endDate ? new Date(edu.data.endDate).getFullYear() : 'Present';
            
            return (
              <div class="education-item">
                <div class="education-header">
                  <h3>{edu.data.degree}</h3>
                  <span class="date">{startYear} - {endYear}</span>
                </div>
                <p class="institution">{edu.data.institution}</p>
                {edu.data.achievements && edu.data.achievements.length > 0 && (
                  <p class="achievement">{edu.data.achievements[0]}</p>
                )}
              </div>
            );
          })}
      </div>
    </section>

    <section class="resume-section">
      <h2>Professional Development & Coursework</h2>
      <div class="transcript-container">
        <div class="transcript-header">
          <span class="th-course">Course/Program</span>
          <span class="th-institution">Institution</span>
          <span class="th-credits">Credit Equiv.</span>
        </div>
        
        <div class="transcript-section">
