---
import { getCollection, getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { type CollectionEntry } from 'astro:content';
import RelatedBlogPosts from '../../components/RelatedBlogPosts.astro';
import { siteConfig } from '../../config/site';

export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');
  return projectEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry, allProjects: projectEntries },
  }));
}

type Props = {
  entry: CollectionEntry<'projects'>;
  allProjects: CollectionEntry<'projects'>[];
};

const { entry, allProjects } = Astro.props;
const { Content } = await entry.render();

// Get other projects for the sidebar (exclude current project)
const otherProjects = allProjects.filter(project => project.slug !== entry.slug);

// Format the date
const formattedDate = new Date(entry.data.projectDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
});
---

<Layout title={entry.data.title} description={entry.data.description}>
  <div class="project-page">
    <article class="project-content">
      <div class="project-header">
        <h1 class="project-title">{entry.data.title}</h1>
        <div class="project-meta">
          <span class="project-date">{formattedDate}</span>
          <span class="project-status">{entry.data.completed ? 'Completed' : 'In Progress'}</span>
        </div>
        <div class="project-links">
          {entry.data.projectUrl && (
            <a href={entry.data.projectUrl} target="_blank" rel="noopener noreferrer" class="project-link">
              <span class="link-icon">üîó</span>
              <span class="link-text">Live Project</span>
            </a>
          )}
          {entry.data.githubUrl && (
            <a href={entry.data.githubUrl} target="_blank" rel="noopener noreferrer" class="project-link">
              <span class="link-icon">üìÅ</span>
              <span class="link-text">GitHub Repository</span>
            </a>
          )}
        </div>
      </div>

      <div class="project-featured-image">
        <div class="featured-image-placeholder">
          <div class="placeholder-text">{entry.data.projectImage}</div>
        </div>
      </div>

      <div class="project-body">
        <Content />
      </div>

      <div class="project-technologies">
        <h3 class="technologies-title">Technologies Used</h3>
        <div class="technologies-list">
          {entry.data.technologies.map(tech => (
            <span class="technology-tag">{tech}</span>
          ))}
        </div>
      </div>

      <RelatedBlogPosts blogSlugs={entry.data.relatedBlogPosts} />
    </article>

    <aside class="project-sidebar">
      <div class="sidebar-widget project-info">
        <h3 class="widget-title">Project Information</h3>
        <div class="info-item">
          <span class="info-label">Status:</span>
          <span class="info-value">{entry.data.completed ? 'Completed' : 'In Progress'}</span>
        </div>
        <div class="info-item">
          <span class="info-label">Date:</span>
          <span class="info-value">{formattedDate}</span>
        </div>
        <div class="info-item">
          <span class="info-label">Type:</span>
          <span class="info-value">Portfolio Project</span>
        </div>
      </div>

      {otherProjects.length > 0 && (
        <div class="sidebar-widget related-projects">
          <h3 class="widget-title">Other Projects</h3>
          <div class="related-projects-list">
            {otherProjects.map(project => (
              <a href={`/portfolio/${project.slug}`} class="related-project">
                <div class="related-project-title">{project.data.title}</div>
                <div class="related-project-tech">{project.data.technologies.slice(0, 3).join(', ')}</div>
              </a>
            ))}
          </div>
        </div>
      )}

      <div class="sidebar-widget contact-cta">
        <h3 class="widget-title">Interested in working together?</h3>
        <p>I'm always open to discussing product design or partnership opportunities.</p>
        <a href={`mailto:${siteConfig.email}`} class="btn btn-primary">Get in Touch</a>
      </div>
    </aside>
  </div>
</Layout>

<style>
  .project-page {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 3rem;
    padding-top: 2rem;
  }

  /* Project Content Styles */
  .project-content {
    border-radius: 12px;
    box-shadow: var(--card-shadow);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    will-change: transform, box-shadow;
  }

  html.dark .project-content {
    background: #23232b;
    color: #f3f4f6;
  }

  .project-header {
    padding: 2.5rem 2.5rem 2rem;
    background: linear-gradient(45deg, var(--color-tertiary), var(--color-secondary));
    color: white;
  }

  html.dark .project-header {
    background: linear-gradient(45deg, #2c2c38, #3a3a46);
    position: relative;
    overflow: hidden;
  }

  html.dark .project-header::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(172, 193, 150, 0.1) 0%, rgba(233, 235, 158, 0.2) 50%, rgba(172, 193, 150, 0.1) 100%);
    opacity: 0.6;
    z-index: 0;
  }

  .project-title {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    color: white;
    position: relative;
    z-index: 1;
    letter-spacing: 0.15em;
    text-transform: lowercase;
  }

  html.dark .project-title {
    color: white;
  }

  .project-meta {
    display: flex;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    gap: 1.5rem;
    position: relative;
    z-index: 1;
  }

  html.dark .project-meta {
    color: rgba(255, 255, 255, 0.8);
  }

  .project-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
    position: relative;
    z-index: 1;
  }

  .project-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    backdrop-filter: blur(5px);
  }

  html.dark .project-link {
    background: rgba(233, 235, 158, 0.15);
    color: white;
  }

  .project-link:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  html.dark .project-link:hover {
    background: rgba(233, 235, 158, 0.25);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  }

  .project-featured-image {
    height: 400px;
    overflow: hidden;
  }

  .featured-image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, var(--color-tertiary), var(--color-secondary));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 1.5rem;
    position: relative;
    overflow: hidden;
  }

  html.dark .featured-image-placeholder {
    background: linear-gradient(45deg, #2c2c38, #3a3a46);
    position: relative;
  }

  html.dark .featured-image-placeholder::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at center, rgba(172, 193, 150, 0.2), transparent 70%);
    animation: pulse-dark 4s ease-in-out infinite alternate;
  }

  @keyframes pulse-dark {
    0% {
      opacity: 0.1;
      transform: scale(0.8);
    }
    100% {
      opacity: 0.3;
      transform: scale(1.2);
    }
  }

  .project-body {
    padding: 2.5rem;
    font-size: 1.05rem;
    line-height: 1.7;
    background: white;
  }

  html.dark .project-body {
    background: #23232b;
    color: #f3f4f6;
  }

  /* Markdown Typography */
  .project-body h2 {
    font-size: 1.8rem;
    margin: 2.5rem 0 1.5rem;
    padding-top: 2rem;
    color: var(--text-color);
    font-weight: 700;
    position: relative;
    padding-bottom: 0.5rem;
  }

  .project-body h2::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 3px;
    background: linear-gradient(to right, var(--color-tertiary), var(--color-secondary));
    border-radius: 3px;
  }

  .project-body h2:first-child {
    margin-top: 0;
  }

  html.dark .project-body h2 {
    color: #f3f4f6;
  }

  .project-body h3 {
    font-size: 1.4rem;
    margin: 2rem 0 1rem;
    padding-top: 1.5rem;
    color: var(--text-color);
    font-weight: 600;
  }

  .project-body h3:first-child {
    margin-top: 0;
  }

  html.dark .project-body h3 {
    color: #f3f4f6;
  }

  .project-body h4 {
    font-size: 1.1rem;
    margin: 1.5rem 0 0.75rem;
    padding-top: 1rem;
    color: var(--text-color);
    font-weight: 600;
  }

  html.dark .project-body h4 {
    color: #f3f4f6;
  }

  .project-body p {
    margin-bottom: 1.25rem;
    color: var(--text-color);
  }

  .project-body p:last-child {
    margin-bottom: 0;
  }

  html.dark .project-body p {
    color: #c5c5d2;
  }

  .project-body ul, .project-body ol {
    margin: 1rem 0 1.5rem;
    padding-left: 1.5rem;
  }

  html.dark .project-body ul,
  html.dark .project-body ol {
    color: #c5c5d2;
  }

  .project-body li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .project-body li:last-child {
    margin-bottom: 0;
  }

  /* Nested lists */
  .project-body li ul,
  .project-body li ol {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  /* Strong text */
  .project-body strong {
    font-weight: 600;
    color: var(--text-color);
  }

  html.dark .project-body strong {
    color: #f3f4f6;
  }

  /* Links */
  .project-body a {
    color: var(--primary-color);
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .project-body a:hover {
    color: var(--primary-dark);
  }

  /* Code blocks */
  .project-body code {
    background: var(--background-alt);
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9em;
    font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
  }

  html.dark .project-body code {
    background: rgba(255, 255, 255, 0.1);
  }

  .project-body pre {
    background: var(--background-alt);
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  html.dark .project-body pre {
    background: rgba(0, 0, 0, 0.3);
  }

  .project-body pre code {
    background: transparent;
    padding: 0;
  }

  /* Blockquotes */
  .project-body blockquote {
    border-left: 4px solid var(--color-tertiary);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--text-light);
  }

  html.dark .project-body blockquote {
    border-left-color: var(--color-accent);
    color: #9ca3af;
  }

  /* Horizontal rules */
  .project-body hr {
    border: none;
    border-top: 1px solid var(--border-color);
    margin: 2rem 0;
  }

  html.dark .project-body hr {
    border-top-color: #374151;
  }

  .project-technologies {
    padding: 1.5rem 2.5rem;
    border-top: 1px solid rgba(121, 148, 150, 0.1);
    background: white;
  }

  html.dark .project-technologies {
    background: #23232b;
    border-top: 1px solid rgba(172, 193, 150, 0.1);
  }

  .technologies-title {
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  html.dark .technologies-title {
    color: #f3f4f6;
  }

  .technologies-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .technology-tag {
    background: var(--background-alt);
    color: var(--text-light);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.8rem;
    transition: all 0.3s ease;
  }

  html.dark .technology-tag {
    background: rgba(233, 235, 158, 0.1);
    color: var(--color-accent);
  }

  /* Sidebar Styles */
  .project-sidebar {
    position: sticky;
    top: 2rem;
    align-self: start;
  }

  .sidebar-widget {
    border-radius: 12px;
    box-shadow: var(--card-shadow);
    margin-bottom: 2rem;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  .sidebar-widget:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(20, 8, 14, 0.1), 0 8px 15px rgba(20, 8, 14, 0.05);
  }

  html.dark .sidebar-widget {
    background: #23232b;
    color: #f3f4f6;
  }

  .widget-title {
    margin-bottom: 1.25rem;
    position: relative;
    padding: 1.25rem 1.5rem;
    padding-bottom: 1rem;
    font-size: 1.25rem;
    background: linear-gradient(45deg, var(--color-tertiary), var(--color-secondary));
    color: white;
  }

  html.dark .widget-title {
    background: linear-gradient(45deg, #2c2c38, #3a3a46);
    position: relative;
    overflow: hidden;
  }

  html.dark .widget-title::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(172, 193, 150, 0.1) 0%, rgba(233, 235, 158, 0.2) 50%, rgba(172, 193, 150, 0.1) 100%);
    opacity: 0.6;
    z-index: 0;
  }

  .widget-title::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 1.5rem;
    width: 40px;
    height: 3px;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 3px;
    z-index: 1;
  }

  .info-item {
    margin-bottom: 0.75rem;
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 1.5rem;
    background: white;
  }

  html.dark .info-item {
    background: #23232b;
  }

  .info-label {
    font-weight: 600;
    color: var(--text-light);
  }

  html.dark .info-label {
    color: var(--color-accent);
  }

  html.dark .info-value {
    color: #c5c5d2;
  }

  .related-projects-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 0 1.5rem 1.5rem;
    background: white;
  }

  html.dark .related-projects-list {
    background: #23232b;
  }

  .related-project {
    display: block;
    color: var(--text-color);
    text-decoration: none;
    transition: all 0.3s ease;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(121, 148, 150, 0.1);
  }

  html.dark .related-project {
    color: #f3f4f6;
    border-bottom: 1px solid rgba(172, 193, 150, 0.1);
  }

  .related-project:last-child {
    padding-bottom: 0;
    border-bottom: none;
  }

  .related-project:hover {
    transform: translateX(5px);
  }

  .related-project:hover .related-project-title {
    color: var(--color-tertiary);
  }

  html.dark .related-project:hover .related-project-title {
    color: var(--color-accent);
  }

  .related-project-title {
    font-weight: 500;
    margin-bottom: 0.25rem;
    transition: color 0.3s ease;
  }

  .related-project-tech {
    font-size: 0.85rem;
    color: var(--text-light);
  }

  html.dark .related-project-tech {
    color: #c5c5d2;
  }

  .contact-cta p {
    margin-bottom: 1.5rem;
    color: var(--text-light);
    padding: 0 1.5rem;
    background: white;
  }

  html.dark .contact-cta p {
    color: #c5c5d2;
    background: #23232b;
  }

  .contact-cta .btn {
    width: calc(100% - 3rem);
    margin: 0 1.5rem 1.5rem;
    text-align: center;
    background: var(--color-tertiary);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .contact-cta .btn:hover {
    background: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(121, 148, 150, 0.2);
  }

  html.dark .contact-cta .btn {
    background: var(--color-accent);
    color: #23232b;
  }

  html.dark .contact-cta .btn:hover {
    background: var(--color-light);
    box-shadow: 0 4px 8px rgba(172, 193, 150, 0.3);
  }

  /* Responsive Adjustments */
  @media (max-width: 1100px) {
    .project-page {
      grid-template-columns: 1fr;
    }

    .project-sidebar {
      position: static;
      order: -1;
    }

    .project-info {
      position: sticky;
      top: 2rem;
    }
  }

  @media (max-width: 768px) {
    .project-header, .project-body, .project-technologies {
      padding: 1.5rem;
    }

    .project-title {
      font-size: 2rem;
    }

    .project-featured-image {
      height: 250px;
    }

    .project-links {
      flex-direction: column;
    }
  }
</style>