---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Icon from '../components/Icon/Icon.astro';

// Get the author data
const authorEntries = await getCollection('authors');
const author = authorEntries[0]; // Using the first author as this is a personal site
---

<Layout title="About Me" description="Learn more about my professional background, skills, and experience">
   <div class="about-page">
     <section class="about-hero">
       <div class="about-header">
         <Icon name="User" size={48} weight="duotone" liquid={true} inkEffect="medium" />
         <h1>About Me</h1>
       </div>
       <p class="lead">{author.data.shortBio}</p>
     </section>

     <div class="about-container">
       <!-- Left sidebar with profile info -->
       <aside class="about-sidebar">
         <div class="sidebar-sticky">
           <div class="profile-sidebar">
             <div class="profile-image-placeholder">
               <div class="placeholder-text">Profile Photo</div>
             </div>
             <div class="profile-details">
               <h3>Quick Info</h3>
               <ul class="profile-list">
                 <li><strong>Name:</strong> {author.data.name}</li>
                 <li><strong>Title:</strong> {author.data.title}</li>
                 <li><strong>Location:</strong> {author.data.location}</li>
                 <li><strong>Email:</strong> <a href={`mailto:${author.data.email}`}>{author.data.email}</a></li>
               </ul>

               <div class="profile-cta">
                 <a href="/portfolio" class="btn btn-primary">View Portfolio</a>
                 <a href="/resume.pdf" class="btn btn-secondary">Download Resume</a>
               </div>
             </div>
           </div>
         </div>
       </aside>

       <!-- Main about content -->
       <section class="about-main">
         <div class="about-content">
           <h2>My Story</h2>
           {author.data.longBio.split('\n\n').map(paragraph => (
             <p>{paragraph}</p>
           ))}

           <h3>Professional Philosophy</h3>
           <ul class="philosophy-list">
             <li><strong>Fitts Optimizing</strong> - Making the important things easy to reach</li>
             <li><strong>Kotter × Parkinson's Law²</strong> - Create urgency to fill the day</li>
             <li><strong>Optimize For Outcomes</strong> - Results over process, always</li>
             <li><strong>All Meetings are F(x)'s</strong> - Every meeting must have inputs and outputs</li>
             <li><strong>XML Prompt Chain Shotting</strong> - Structured thinking for complex problems</li>
           </ul>
         </div>
       </section>
     </div>

    <section class="skills-section">
      <h2>Skills & Expertise</h2>
      
      <div class="skills-categories">
        <div class="skill-category">
          <h3>Technical Skills</h3>
          <ul class="skills-list">
            {author.data.skills?.map(skill => (
              <li>{skill}</li>
            )) || []}
          </ul>
        </div>
        
        <div class="skill-category">
          <h3>Soft Skills</h3>
          <ul class="skills-list">
            {author.data.softSkills?.map(skill => (
              <li>{skill}</li>
            )) || []}
          </ul>
        </div>
        
        <div class="skill-category">
          <h3>Interests</h3>
          <ul class="skills-list">
            {author.data.interests?.map(interest => (
              <li>{interest}</li>
            )) || []}
          </ul>
        </div>
      </div>
    </section>

    <section class="contact-section">
      <h2>Let's Connect</h2>
      <p>I'm always open to discussing new projects, opportunities, and partnerships. Feel free to reach out!</p>
      
      <div class="contact-options">
        {author.data.email && (
          <a href={`mailto:${author.data.email}`} class="contact-option">
            <div class="contact-icon">
              <Icon name="Envelope" size={32} weight="duotone" liquid={true} />
            </div>
            <div class="contact-label">Email</div>
          </a>
        )}
        
        {author.data.socialLinks?.linkedin && (
          <a href={author.data.socialLinks.linkedin} target="_blank" rel="noopener noreferrer" class="contact-option">
            <div class="contact-icon">
              <Icon name="LinkedinLogo" size={32} weight="duotone" liquid={true} />
            </div>
            <div class="contact-label">LinkedIn</div>
          </a>
        )}

        {author.data.socialLinks?.github && (
          <a href={author.data.socialLinks.github} target="_blank" rel="noopener noreferrer" class="contact-option">
            <div class="contact-icon">
              <Icon name="GithubLogo" size={32} weight="duotone" liquid={true} />
            </div>
            <div class="contact-label">GitHub</div>
          </a>
        )}

        {author.data.socialLinks?.bluesky && (
          <a href={author.data.socialLinks.bluesky} target="_blank" rel="noopener noreferrer" class="contact-option">
            <div class="contact-icon">
              <Icon name="Butterfly" size={32} weight="duotone" liquid={true} />
            </div>
            <div class="contact-label">Bluesky</div>
          </a>
        )}
      </div>
    </section>
  </div>
</Layout>

<style>
   .about-page {
     max-width: 1400px;
     margin: 0 auto;
     padding: 4rem 1.5rem;
   }

   /* Hero Section */
   .about-hero {
     margin-bottom: 3rem;
     text-align: center;
   }

   .about-header {
     display: flex;
     align-items: center;
     justify-content: center;
     gap: 1rem;
     margin-bottom: 1rem;
   }

   .about-hero h1 {
     font-size: 2.5rem;
     font-weight: 700;
     margin: 0;
     color: var(--text-color);
   }

   .lead {
     font-size: 1.25rem;
     color: var(--text-light);
     line-height: 1.6;
     max-width: 800px;
     margin: 0 auto;
   }

   /* Container Layout */
   .about-container {
     display: grid;
     grid-template-columns: 280px 1fr;
     gap: 3rem;
     align-items: flex-start;
   }

   /* About Sidebar */
   .about-sidebar {
     position: sticky;
     top: 5rem;
     max-height: calc(100vh - 6rem);
     overflow-y: auto;
   }

   .sidebar-sticky {
     background: var(--card-bg, white);
     border-radius: 12px;
     padding: 1.5rem;
     box-shadow: var(--card-shadow);
   }

   html.dark .sidebar-sticky {
     background: #23232b;
   }

   .about-main {
     min-width: 0;
   }

   .about-section {
     margin-bottom: 4rem;
   }

  .about-content h2 {
    color: var(--text-color);
    margin-bottom: 1.5rem;
  }

  .about-content h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .about-content p {
    margin-bottom: 1.2rem;
    line-height: 1.7;
  }

  .philosophy-list {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0;
  }

  .philosophy-list li {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border-color);
    line-height: 1.6;
  }

  html.dark .philosophy-list li {
    border-bottom-color: #374151;
  }

  .philosophy-list li:last-child {
    border-bottom: none;
  }

  .philosophy-list strong {
    color: var(--color-tertiary);
    display: inline-block;
    margin-right: 0.5rem;
  }

  html.dark .philosophy-list strong {
    color: var(--color-accent);
  }

   .profile-sidebar {
     transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
     will-change: transform, box-shadow;
   }

   .profile-sidebar:hover {
     transform: translateY(-7px) scale(1.01);
     box-shadow: 0 15px 30px rgba(20, 8, 14, 0.1), 0 8px 10px rgba(20, 8, 14, 0.05);
   }

  .profile-image-placeholder {
    height: 300px;
    background: linear-gradient(45deg, var(--color-tertiary), var(--color-secondary));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 1.25rem;
  }

  html.dark .profile-image-placeholder {
    background: linear-gradient(45deg, #2c2c38, #3a3a46);
    position: relative;
    overflow: hidden;
  }

  html.dark .profile-image-placeholder::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at center, rgba(172, 193, 150, 0.2), transparent 70%);
    animation: pulse-dark 4s ease-in-out infinite alternate;
  }

  @keyframes pulse-dark {
    0% {
      opacity: 0.1;
      transform: scale(0.8);
    }
    100% {
      opacity: 0.3;
      transform: scale(1.2);
    }
  }

  .profile-details {
    padding: 2rem;
    background: white;
    border-top: 1px solid rgba(121, 148, 150, 0.1);
  }

  html.dark .profile-details {
    background: #23232b;
    border-top: 1px solid rgba(172, 193, 150, 0.1);
  }

  .profile-details a {
    color: var(--primary-color);
    text-decoration: none;
  }

  .profile-details a:hover {
    text-decoration: underline;
  }

  .profile-list {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0;
  }

  .profile-list li {
    margin-bottom: 0.75rem;
  }

  .profile-cta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }

  .skills-section, .experience-section, .contact-section {
    margin-bottom: 4rem;
  }

  .skills-section h2, .experience-section h2, .contact-section h2 {
    text-align: center;
    margin-bottom: 2.5rem;
    position: relative;
  }

  .skills-section h2::after, .experience-section h2::after, .contact-section h2::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--primary-color);
    border-radius: 3px;
  }

  .skills-categories {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .skill-category {
    border-radius: 12px;
    box-shadow: var(--card-shadow);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  .skill-category:hover {
    transform: translateY(-7px) scale(1.01);
    box-shadow: 0 15px 30px rgba(20, 8, 14, 0.1), 0 8px 10px rgba(20, 8, 14, 0.05);
  }

  .skill-category h3 {
    background: linear-gradient(45deg, var(--color-tertiary), var(--color-secondary));
    color: white;
    margin-bottom: 0;
    padding: 1.5rem;
    text-align: center;
  }

  html.dark .skill-category h3 {
    background: linear-gradient(45deg, #2c2c38, #3a3a46);
    color: white;
    position: relative;
    overflow: hidden;
  }

  html.dark .skill-category h3::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(172, 193, 150, 0.1) 0%, rgba(233, 235, 158, 0.2) 50%, rgba(172, 193, 150, 0.1) 100%);
    opacity: 0.6;
    z-index: 0;
  }

  .skills-list {
    list-style: none;
    padding: 1.5rem;
    background: white;
  }

  html.dark .skills-list {
    background: #23232b;
  }

  .skills-list li {
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(121, 148, 150, 0.1);
    display: flex;
    align-items: center;
  }

  html.dark .skills-list li {
    border-bottom: 1px solid rgba(172, 193, 150, 0.1);
  }

  .skills-list li:last-child {
    border-bottom: none;
  }

  .skills-list li::before {
    content: '•';
    color: var(--color-tertiary);
    margin-right: 0.5rem;
    font-size: 1.2rem;
  }

  html.dark .skills-list li::before {
    color: var(--color-accent);
  }

  .contact-section {
    text-align: center;
  }

  .contact-section p {
    max-width: 600px;
    margin: 0 auto 2rem;
    color: var(--text-light);
  }

  .contact-options {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .contact-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--card-shadow);
    width: 120px;
  }

  html.dark .contact-option {
    background: #23232b;
  }

  .contact-option:hover {
    transform: translateY(-7px);
    box-shadow: 0 15px 30px rgba(20, 8, 14, 0.1), 0 8px 10px rgba(20, 8, 14, 0.05);
  }

  .contact-icon {
    font-size: 2rem;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact-label {
    color: var(--text-color);
    font-weight: 500;
  }

  html.dark .contact-label {
    color: #f3f4f6;
  }

   /* Responsive */
   @media (max-width: 1024px) {
     .about-container {
       grid-template-columns: 1fr;
     }

     .about-sidebar {
       position: static;
       margin-bottom: 2rem;
       max-height: none;
     }

     .sidebar-sticky {
       max-width: 100%;
     }
   }

   @media (max-width: 900px) {
     .skills-categories {
       grid-template-columns: 1fr;
       gap: 1.5rem;
     }
   }

  @media (max-width: 600px) {
    .contact-options {
      gap: 1.5rem;
    }

    .about-hero h1 {
      font-size: 2.5rem;
    }
  }

   html.dark .profile-details a {
     color: var(--color-accent);
   }

   /* Responsive */
   @media (max-width: 768px) {
     .about-page {
       padding: 3rem 1rem;
     }

     .about-header {
       flex-direction: column;
     }

     .about-hero h1 {
       font-size: 2rem;
     }

     .lead {
       font-size: 1.1rem;
     }
   }
</style>