---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get the author data
const authorEntries = await getCollection('authors');
const author = authorEntries[0]; // Using the first author as this is a personal site
---

<Layout title="About Me" description="Learn more about my professional background, skills, and experience">
  <div class="about-page">
    <section class="about-hero">
      <div class="about-hero-content">
        <h1>About Me</h1>
        <p class="lead">{author.data.shortBio}</p>
      </div>
    </section>

    <section class="about-section">
      <div class="about-grid">
        <div class="about-content">
          <h2>My Story</h2>
          {author.data.longBio.split('\n\n').map(paragraph => (
            <p>{paragraph}</p>
          ))}
          
          <h3>Professional Philosophy</h3>
          <p>I believe that great products come from a deep understanding of user needs, technical excellence, and thoughtful design. My goal is always to create solutions that are not only functional but also delightful to use.</p>
        </div>
        
        <div class="profile-sidebar">
          <div class="profile-image-placeholder">
            <div class="placeholder-text">Profile Photo</div>
          </div>
          <div class="profile-details">
            <h3>Quick Info</h3>
            <ul class="profile-list">
              <li><strong>Name:</strong> {author.data.name}</li>
              <li><strong>Title:</strong> {author.data.title}</li>
              <li><strong>Location:</strong> {author.data.location}</li>
              <li><strong>Email:</strong> <a href={`mailto:${author.data.email}`}>{author.data.email}</a></li>
            </ul>
            
            <div class="profile-cta">
              <a href="/portfolio" class="btn btn-primary">View Portfolio</a>
              <a href="/resume.pdf" class="btn btn-secondary">Download Resume</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="skills-section">
      <h2>Skills & Expertise</h2>
      
      <div class="skills-categories">
        <div class="skill-category">
          <h3>Technical Skills</h3>
          <ul class="skills-list">
            {author.data.skills
              .filter(skill => ['Software Development', 'Web Development', 'AI Prompt Engineering'].includes(skill))
              .map(skill => (
                <li>{skill}</li>
              ))
            }
          </ul>
        </div>
        
        <div class="skill-category">
          <h3>Product Management</h3>
          <ul class="skills-list">
            {author.data.skills
              .filter(skill => ['Product Management', 'UX/UI Design'].includes(skill))
              .map(skill => (
                <li>{skill}</li>
              ))
            }
          </ul>
        </div>
        
        <div class="skill-category">
          <h3>Interests</h3>
          <ul class="skills-list">
            {author.data.interests.map(interest => (
              <li>{interest}</li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <section class="contact-section">
      <h2>Let's Connect</h2>
      <p>I'm always open to discussing new projects, opportunities, and partnerships. Feel free to reach out!</p>
      
      <div class="contact-options">
        {author.data.email && (
          <a href={`mailto:${author.data.email}`} class="contact-option">
            <div class="contact-icon">‚úâÔ∏è</div>
            <div class="contact-label">Email</div>
          </a>
        )}
        
        {author.data.socialLinks.linkedin && (
          <a href={author.data.socialLinks.linkedin} target="_blank" rel="noopener noreferrer" class="contact-option">
            <div class="contact-icon">üîó</div>
            <div class="contact-label">LinkedIn</div>
          </a>
        )}
        
        {author.data.socialLinks.github && (
          <a href={author.data.socialLinks.github} target="_blank" rel="noopener noreferrer" class="contact-option">
            <div class="contact-icon">üêô</div>
            <div class="contact-label">GitHub</div>
          </a>
        )}

        {author.data.socialLinks.bluesky && (
          <a href={author.data.socialLinks.bluesky} target="_blank" rel="noopener noreferrer" class="contact-option">
            <div class="contact-icon">üåÖ</div>
            <div class="contact-label">Bluesky</div>
          </a>
        )}

        {author.data.socialLinks.twitter && (
          <a href={author.data.socialLinks.twitter} target="_blank" rel="noopener noreferrer" class="contact-option">
            <div class="contact-icon">üê¶</div>
            <div class="contact-label">Twitter</div>
          </a>
        )}
      </div>
    </section>
  </div>
</Layout>

<style>
  .about-page {
    max-width: 1000px;
    margin: 0 auto;
  }

  .about-hero {
    text-align: center;
    padding: 4rem 0 3rem;
    margin-bottom: 3rem;
  }

  .about-hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
  }

  .about-hero .lead {
    font-size: 1.25rem;
    max-width: 700px;
    margin: 0 auto;
    color: var(--text-light);
  }

  .about-section {
    margin-bottom: 4rem;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 3rem;
  }

  .about-content h2 {
    color: var(--text-color);
    margin-bottom: 1.5rem;
  }

  .about-content h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .about-content p {
    margin-bottom: 1.2rem;
    line-height: 1.7;
  }

  .profile-sidebar {
    background: white;
    border-radius: 8px;
    box-shadow: var(--card-shadow);
    overflow: hidden;
  }

  .profile-image-placeholder {
    height: 300px;
    background: linear-gradient(45deg, var(--primary-color), var(--primary-dark));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 1.25rem;
  }

  .profile-details {
    padding: 2rem;
  }

  .profile-details a {
    color: var(--primary-color);
    text-decoration: none;
  }

  .profile-details a:hover {
    text-decoration: underline;
  }

  .profile-list {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0;
  }

  .profile-list li {
    margin-bottom: 0.75rem;
  }

  .profile-cta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }

  .skills-section, .experience-section, .contact-section {
    margin-bottom: 4rem;
  }

  .skills-section h2, .experience-section h2, .contact-section h2 {
    text-align: center;
    margin-bottom: 2.5rem;
    position: relative;
  }

  .skills-section h2::after, .experience-section h2::after, .contact-section h2::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--primary-color);
    border-radius: 3px;
  }

  .skills-categories {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .skill-category {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: var(--card-shadow);
  }

  .skill-category h3 {
    color: var(--primary-color);
    margin-bottom: 1.2rem;
    text-align: center;
  }

  .skills-list {
    list-style: none;
    padding: 0;
  }

  .skills-list li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border-color);
  }

  .skills-list li:last-child {
    border-bottom: none;
  }

  .contact-section {
    text-align: center;
  }

  .contact-section p {
    max-width: 600px;
    margin: 0 auto 2rem;
    color: var(--text-light);
  }

  .contact-options {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .contact-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .contact-option:hover {
    transform: translateY(-5px);
  }

  .contact-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .contact-label {
    color: var(--text-color);
    font-weight: 500;
  }

  @media (max-width: 900px) {
    .about-grid {
      grid-template-columns: 1fr;
    }

    .skills-categories {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  @media (max-width: 600px) {
    .contact-options {
      gap: 1.5rem;
    }

    .about-hero h1 {
      font-size: 2.5rem;
    }
  }

  html.dark .skill-category {
    background: var(--background-alt);
    color: var(--text-color);
    box-shadow: var(--card-shadow);
  }

  html.dark .skill-category h3 {
    color: var(--color-accent);
  }

  html.dark .skills-list li {
    color: var(--text-light);
    border-bottom: 1px solid var(--border-color);
  }

  html.dark .profile-sidebar {
    background: var(--background-alt);
  }

  html.dark .profile-details a {
    color: var(--color-accent);
  }
</style>