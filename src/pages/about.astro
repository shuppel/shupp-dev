<style>
  .about-page {
    max-width: 1000px;
    margin: 0 auto;
  }

  .about-hero {
    text-align: center;
    padding: 4rem 0 3rem;
    margin-bottom: 3rem;
  }

  .about-hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
  }

  .about-hero .lead {
    font-size: 1.25rem;
    max-width: 700px;
    margin: 0 auto;
    color: var(--text-light);
  }

  .about-section {
    margin-bottom: 4rem;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 3rem;
  }

  .about-content h2 {
    color: var(--text-color);
    margin-bottom: 1.5rem;
  }

  .about-content h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .about-content p {
    margin-bottom: 1.2rem;
    line-height: 1.7;
  }

  .profile-sidebar {
    background: white;
    border-radius: 8px;
    box-shadow: var(--card-shadow);
    overflow: hidden;
  }

  .profile-image-placeholder {
    height: 300px;
    background: linear-gradient(45deg, var(--primary-color), var(--primary-dark));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 1.25rem;
  }

  .profile-details {
    padding: 2rem;
  }

  .profile-list {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0;
  }

  .profile-list li {
    margin-bottom: 0.75rem;
  }

  .profile-cta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }

  .skills-section, .experience-section, .contact-section {
    margin-bottom: 4rem;
  }

  .skills-section h2, .experience-section h2, .contact-section h2 {
    text-align: center;
    margin-bottom: 2.5rem;
    position: relative;
  }

  .skills-section h2::after, .experience-section h2::after, .contact-section h2::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--primary-color);
    border-radius: 3px;
  }

  .skills-categories {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .skill-category {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: var(--card-shadow);
  }

  .skill-category h3 {
    color: var(--primary-color);
    margin-bottom: 1.2rem;
    text-align: center;
  }

  .skills-list {
    list-style: none;
    padding: 0;
  }

  .skills-list li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border-color);
  }

  .skills-list li:last-child {
    border-bottom: none;
  }

  .timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
  }

  .timeline::before {
    content: '';
    position: absolute;
    width: 2px;
    background-color: var(--border-color);
    top: 0;
    bottom: 0;
    left: 50px;
    margin-left: -1px;
  }

  .timeline-item {
    position: relative;
    margin-bottom: 2.5rem;
    display: flex;
  }

  .timeline-marker {
    min-width: 25px;
    height: 25px;
    background-color: var(--primary-color);
    border-radius: 50%;
    position: absolute;
    left: 50px;
    transform: translateX(-50%);
    z-index: 1;
  }

  .timeline-content {
    margin-left: 80px;
    background: white;
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: var(--card-shadow);
    flex: 1;
  }

  .timeline-date {
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
  }

  .timeline-company {
    font-style: italic;
    color: var(--text-light);
    margin-bottom: 1rem;
  }

  .contact-section {
    text-align: center;
  }

  .contact-section p {
    max-width: 600px;
    margin: 0 auto 2rem;
    color: var(--text-light);
  }

  .contact-options {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .contact-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .contact-option:hover {
    transform: translateY(-5px);
  }

  .contact-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .contact-label {
    color: var(--text-color);
    font-weight: 500;
  }

  @media (max-width: 900px) {
    .about-grid {
      grid-template-columns: 1fr;
    }

    .skills-categories {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .timeline::before {
      left: 30px;
    }

    .timeline-marker {
      left: 30px;
    }

    .timeline-content {
      margin-left: 60px;
    }
  }

  @media (max-width: 600px) {
    .contact-options {
      gap: 1.5rem;
    }

    .about-hero h1 {
      font-size: 2.5rem;
    }
  }
</style>