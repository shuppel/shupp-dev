              <a href="/portfolio" class="btn btn-primary">View Portfolio</a>
              <a href="/resume.pdf" class="btn btn-secondary">Download Resume</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="skills-section">
      <h2>Skills & Expertise</h2>
      
