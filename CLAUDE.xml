  <guidelines>
    <guideline priority="critical">
      <rule>Use feature flags for all new features and experimental code</rule>
      <description>All new features must be implemented behind feature flags as defined in FEATURE-FLAGS-CODEX.md</description>
      <enforcement>
        <location>/src/config/features.ts</location>
        <documentation>/FEATURE-FLAGS-CODEX.md</documentation>
        <pattern>Use isFeatureEnabled() function for type-safe flag checks</pattern>
      </enforcement>
      <checklist>
        <item>Add flag to /src/config/features.ts</item>
        <item>Use environment variables for override capability</item>
        <item>Document with JSDoc including deprecation date</item>
        <item>Test both enabled and disabled states</item>
        <item>Never hardcode feature availability</item>
      </checklist>
    </guideline>
    
    <guideline priority="high">
      <rule>Never use type 'any' - always use precise types</rule>
      <enforcement>ESLint rule @typescript-eslint/no-explicit-any set to error</enforcement>
    </guideline>
    
    <guideline priority="high">
      <rule>All email links must use erikk@shupp.dev</rule>
      <location>/src/config/site.ts</location>
    </guideline>
    
    <guideline priority="high">
      <rule>Use shared CSS libraries for calculator tools</rule>
      <description>All calculator tools must use the shared liquid theme CSS library located at /src/components/tools/shared/</description>
      <files>
        <file>liquid-theme.css - Base theme variables and core styles</file>
        <file>components.css - Reusable component styles</file>
        <file>calculator-theme.css - Calculator-specific shared styles</file>
      </files>
    </guideline>
    
    <guideline priority="medium">
      <rule>Maintain dark mode support for all new components</rule>
      <pattern>Use CSS variables defined in Layout.astro</pattern>
    </guideline>
    
    <guideline priority="medium">
      <rule>Follow existing code conventions and patterns</rule>
      <description>Check neighboring files and existing components before creating new ones</description>
    </guideline>
  </guidelines>
</project-config>