  <architecture>
    <structure>
      <item type="framework">Astro with Content Collections</item>
      <item type="styling">CSS with dark mode support</item>
      <item type="hosting">Netlify</item>
      <item type="content">Markdown with frontmatter</item>
    </structure>
    
    <features>
      <feature>Portfolio showcase with project previews (thum.io integration)</feature>
      <feature>Blog with categories and tags</feature>
      <feature>Thoughtful App Co. - App idea showcase</feature>
      <feature>Development roadmap</feature>
      <feature>Dark mode toggle</feature>
      <feature>SEO optimized</feature>
      <feature>Interactive calculator tools (Buy vs Rent, Rent vs Sell)</feature>
    </features>
    
    <tools>
      <architecture>
        <description>Calculator tools use a shared Liquid Design System with flowing animations and consistent UI</description>
        <sharedLibrary location="/src/components/tools/shared/">
          <file name="liquid-theme.css">
            <purpose>Core design system variables, base styles, and animations</purpose>
            <includes>Color palette, typography, spacing, transitions, base components</includes>
          </file>
          <file name="components.css">
            <purpose>Reusable UI components that extend the liquid theme</purpose>
            <includes>Buttons, cards, insights, charts, metrics, progress bars</includes>
          </file>
          <file name="calculator-theme.css">
            <purpose>Calculator-specific shared styles</purpose>
            <includes>Form layouts, input styles, wealth comparisons, payment breakdowns</includes>
          </file>
        </sharedLibrary>
        <conventions>
          <convention>All tools extend liquid-* classes from shared library</convention>
          <convention>Tool-specific CSS only contains unique overrides</convention>
          <convention>Use CSS custom properties (variables) for theming</convention>
          <convention>Maintain consistent liquid animations across tools</convention>
        </conventions>
      </architecture>
    </tools>
    
    <contentCollections>
      <collection name="authors" schema="strict" />
      <collection name="blog" schema="strict" />
      <collection name="credentials" schema="strict" />
      <collection name="education" schema="strict" />
      <collection name="experience" schema="strict" />
      <collection name="principles" schema="strict" />
      <collection name="projects" schema="strict" />
      <collection name="resume" schema="strict" />
      <collection name="roadmap" schema="strict" />
      <collection name="skills" schema="strict" />
      <collection name="thoughtful-apps" schema="strict" />
    </contentCollections>
  </architecture>
  
  <development>
    <scripts>
      <script name="dev" command="astro dev" description="Start development server" />
      <script name="build" command="astro build" description="Build for production" />
      <script name="preview" command="astro preview" description="Preview production build" />
      <script name="lint" command="eslint . --ext .ts,.tsx,.astro" description="Run ESLint" />
      <script name="lint:fix" command="eslint . --ext .ts,.tsx,.astro --fix" description="Fix ESLint issues" />
      <script name="typecheck" command="astro check &amp;&amp; tsc --noEmit" description="Type check" />
    </scripts>
    
    <linting>
      <tool>ESLint with TypeScript and Astro plugins</tool>
      <rules>
        <rule name="@typescript-eslint/no-explicit-any" level="error" />
        <rule name="@typescript-eslint/explicit-function-return-type" level="warn" />
        <rule name="@typescript-eslint/strict-boolean-expressions" level="error" />
      </rules>
    </linting>
    
    <environmentVariables>
      <variable name="ENABLE_TLDRAW" default="false" description="Feature flag for TLDraw integration" />
      <!-- Additional feature flags should be added here and in /src/config/features.ts -->
      <!-- See FEATURE-FLAGS-CODEX.md for implementation guidelines -->
    </environmentVariables>
    
    <featureFlags>
      <documentation>/FEATURE-FLAGS-CODEX.md</documentation>
      <configuration>/src/config/features.ts</configuration>
      <principles>
        <principle>All new features must be behind feature flags</principle>
        <principle>Use type-safe isFeatureEnabled() function</principle>
        <principle>Feature flags are temporary - plan for removal</principle>
        <principle>Environment variables override default values</principle>
      </principles>
    </featureFlags>
  </development>
  
